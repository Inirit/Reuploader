{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2015",
        "module": "system",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "outDir": "js",
        "watch": true,
        "sourceMap": false,
        "traceResolution": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {},
        "typeRoots": [
            "@types",
            "node_modules/@types",
            "node_modules/web-ext-types"
        ]
    },
    "include": [
        "ts/**/*"
    ]
}